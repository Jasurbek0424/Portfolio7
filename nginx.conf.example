# Portfolio — Nginx Configuration
# Copy this file to: /etc/nginx/sites-available/portfolio
# Then enable:  sudo ln -s /etc/nginx/sites-available/portfolio /etc/nginx/sites-enabled/
# Test config:  sudo nginx -t
# Reload:       sudo systemctl reload nginx
# SSL:          sudo certbot --nginx -d khakimbekov.uz -d www.khakimbekov.uz -d admin.khakimbekov.uz

# Hide Nginx version from headers
server_tokens off;

# Rate limiting zones
limit_req_zone $binary_remote_addr zone=api:10m rate=10r/s;
limit_req_zone $binary_remote_addr zone=login:10m rate=1r/s;
limit_req_zone $binary_remote_addr zone=general:10m rate=30r/s;

# Request size limit (global default)
client_max_body_size 1M;

# ──────────────────────────────────────────────
# Redirect HTTP → HTTPS (Certbot will manage this)
# ──────────────────────────────────────────────
# server {
#     listen 80;
